<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="433.0" prefWidth="823.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.saj.fwads.controller.GerenciamentoDepartamentoController">
   <children>

      <!-- Título -->
      <Label fx:id="lblTitulo" text="Título" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="20.0">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>

      <!-- Tabela de departamentos -->
      <TableView fx:id="tabelaGerenciarDepartamentos" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="60.0">
         <columns>
            <TableColumn fx:id="colunaDepartamentoNome" prefWidth="222.0" text="Nome Departamento" />
            <TableColumn fx:id="colunaDepartamentoDataCriacao" prefWidth="139.0" text="DataCriação" />
            <TableColumn fx:id="colunaDepartamentoDataAtualizacao" prefWidth="142.0" text="DataAtualização" />
            <TableColumn fx:id="colunaDepartamentoCriadoPor" prefWidth="129.0" text="CriadoPor" />
            <TableColumn fx:id="colunaDepartamentoAtualizadoPor" prefWidth="137.0" text="AtualizadoPor" />
         </columns>
      </TableView>

      <!-- Botões -->
      <Button fx:id="btnCadastrarDepartamento" text="Cadastrar Departamento" onAction="#cadastrarDepartamento"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" />

      <Button fx:id="btnAtualizarDepartamento" text="Atualizar Departamento" onAction="#atualizarDepartamento"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="230.0" />

      <Button fx:id="btnRemoverDepartamento" text="Remover Departamento" onAction="#removerDepartamento"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="440.0" />

      <Button fx:id="btnVoltar" text="Voltar" onAction="#voltar"
              AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0" />

   </children>
</AnchorPane>