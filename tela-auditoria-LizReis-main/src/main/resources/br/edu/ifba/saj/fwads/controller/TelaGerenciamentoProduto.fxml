<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="433.0" prefWidth="823.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.saj.fwads.controller.GerenciamentoProdutoController">
   <children>

      <!-- Título -->
      <Label fx:id="lblTitulo" text="Título" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>

      <!-- Tabela -->
      <TableView fx:id="tabelaGerenciarProdutos" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
         <columns>
            <TableColumn fx:id="colunaProdutoModelo" prefWidth="116.0" text="Modelo" />
            <TableColumn fx:id="colunaProdutoTamanho" prefWidth="58.0" text="Tamanho" />
            <TableColumn fx:id="colunaProdutoCor" prefWidth="75.0" text="Cor" />
            <TableColumn fx:id="colunaProdutoPreco" prefWidth="58.0" text="Preço" />
            <TableColumn fx:id="colunaProdutoDepartamento" prefWidth="105.0" text="Departamento" />
            <TableColumn fx:id="colunaProdutoDataCriacao" prefWidth="81.0" text="DataCriação" />
            <TableColumn fx:id="colunaProdutoDataAtualizacao" prefWidth="105.0" text="DataAtualização" />
            <TableColumn fx:id="colunaProdutoCriadoPor" prefWidth="95.0" text="CriadoPor" />
            <TableColumn fx:id="colunaProdutoAtualizadoPor" prefWidth="128.0" text="AtualizadoPor" />
         </columns>
      </TableView>

      <!-- Botões -->
      <Button fx:id="btnCadastrarProduto" onAction="#cadastrarProduto" text="Cadastrar Produto" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="14.0" />

      <Button fx:id="btnAtualizarProduto" onAction="#atualizarProduto" text="Atualizar Produto" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="160.0" />

      <Button fx:id="btnRemoverProduto" onAction="#removerProduto" text="Remover Produto" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="320.0" />

      <Button fx:id="btnVoltar" onAction="#voltar" text="Voltar" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0" />

   </children>
</AnchorPane>
