<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="433.0" prefWidth="833.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.saj.fwads.controller.GerenciamentoFuncionarioController">
   <children>

      <!-- Título -->
      <Label fx:id="lblTitulo" text="Título" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>

      <!-- Tabela -->
      <TableView fx:id="tabelaGerenciarFuncionarios" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
         <columns>
            <TableColumn fx:id="colunaFuncionarioNome" prefWidth="127.0" text="Nome" />
            <TableColumn fx:id="colunaFuncionarioLogin" prefWidth="88.0" text="Login" />
            <TableColumn fx:id="colunaFuncionarioSetorTrabalho" prefWidth="133.0" text="Setor de Trabalho" />
            <TableColumn fx:id="colunaFuncionarioDataCriacao" prefWidth="109.0" text="DataCriação" />
            <TableColumn fx:id="colunaFuncionarioDataAtualizacao" prefWidth="130.0" text="DataAtualização" />
            <TableColumn fx:id="colunaFuncionarioCriadoPor" prefWidth="97.0" text="CriadoPor" />
            <TableColumn fx:id="colunaFuncionarioAtualizadoPor" prefWidth="147.0" text="AtualizadoPor" />
         </columns>
      </TableView>

      <!-- Botões -->
      <Button fx:id="btnCadastrarFuncionario" onAction="#cadastrarFuncionario" text="Cadastrar Funcionário" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" />

      <Button fx:id="btnAtualizarFuncionario" onAction="#atualizarFuncionario" text="Atualizar Funcionario" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="230.0" />

      <Button fx:id="btnRemoverFuncionario" onAction="#removerFuncionario" text="Remover Funcionario" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="460.0" />

      <Button fx:id="btnVoltar" onAction="#voltar" text="Voltar" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0" />

   </children>
</AnchorPane>
